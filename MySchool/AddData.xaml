<Window x:Class="MySchool.AddData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySchool"
        mc:Ignorable="d"
        Title="AddData" Height="600" Width="1200">
    <Grid>
        <DataGrid Name="gridStudents" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="484" Margin="10,47,0,0" VerticalAlignment="Top" Width="580" />
        <DataGrid Name="gridCourses" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="484" Margin="595,47,0,0" VerticalAlignment="Top" Width="582"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="1102,536,0,0" VerticalAlignment="Top" Width="75" Click="OnClickOK"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="1026,536,0,0" VerticalAlignment="Top" Width="75" Click="OnClickCancel"/>

    </Grid>
</Window>
